#pragma once

// The numeric version format is AAABBBCCCDDDE where:
//
// AAA - major version number
// BBB - minor version number
// CCC - bugfix version number
// DDD - alpha / beta (DDD + 500) version number
// E   - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAABBBCCC. For example:
//
// Version      AAABBBCCCDDDE
//
// 0.1.0        0000010000000
// 0.1.2        0000010010000
// 1.2.3        0010020030000
// 2.2.0-a.1    0020019990010
// 3.0.0-b.2    0029999995020
// 2.2.0-a.1.z  0020019990011
//
#define LIBDIFFPP_VERSION       $libdiffpp.version.project_number$ULL
#define LIBDIFFPP_VERSION_STR   "$libdiffpp.version.project$"
#define LIBDIFFPP_VERSION_ID    "$libdiffpp.version.project_id$"

#define LIBDIFFPP_VERSION_MAJOR $libdiffpp.version.major$
#define LIBDIFFPP_VERSION_MINOR $libdiffpp.version.minor$
#define LIBDIFFPP_VERSION_PATCH $libdiffpp.version.patch$

#define LIBDIFFPP_PRE_RELEASE   $libdiffpp.version.pre_release$

#define LIBDIFFPP_SNAPSHOT_SN   $libdiffpp.version.snapshot_sn$ULL
#define LIBDIFFPP_SNAPSHOT_ID   "$libdiffpp.version.snapshot_id$"
